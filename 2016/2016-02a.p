DEFINE VARIABLE cInput AS CHARACTER EXTENT 5 NO-UNDO.
DEFINE VARIABLE iLine  AS INTEGER     NO-UNDO.
DEFINE VARIABLE iPos   AS INTEGER     NO-UNDO.
DEFINE VARIABLE cCode  AS CHARACTER   NO-UNDO.
DEFINE VARIABLE iChar  AS INTEGER     NO-UNDO.

cInput[1] = "".
cInput[2] = "".
cInput[3] = "".
cInput[4] = "".
cInput[5] = "".

/* /* Test, should get code 1985 */ */
/* cInput[1] = "ULL".               */
/* cInput[2] = "RRDDD".             */
/* cInput[3] = "LURDL".             */
/* cInput[4] = "UUUUD".             */
/* cInput[5] = "".                  */

iPos = 5.

DO iLine = 1 TO 5:
  DO iChar = 1 TO LENGTH(cInput[iLine]):

    CASE SUBSTRING(cInput[iLine],iChar,1):
      WHEN 'U' THEN IF iPos > 3 THEN iPos = iPos - 3.
      WHEN 'D' THEN IF iPos < 7 THEN iPos = iPos + 3.
      WHEN 'L' THEN IF iPos MOD 3 <> 1 THEN iPos = iPos - 1.
      WHEN 'R' THEN IF iPos MOD 3 <> 0 THEN iPos = iPos + 1.
    END CASE.
    
  END.

  cCode = SUBSTITUTE('&1&2',cCode,iPos).
END.

MESSAGE cCode
  VIEW-AS ALERT-BOX INFO BUTTONS OK.

